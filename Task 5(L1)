def is_palindrome(s):
    # Remove spaces and convert to lowercase for uniformity
    s = s.replace(" ", "").lower()
    return s == s[::-1]

# Example usage:
test_strings = ["madam", "racecar", "hello", "nurses run", "Was it a car or a cat I saw"]

for text in test_strings:
    print(f"'{text}': {'Palindrome' if is_palindrome(text) else 'Not a palindrome'}")
